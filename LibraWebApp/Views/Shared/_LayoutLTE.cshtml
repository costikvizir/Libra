    <script>
        $(document).ready(function () {
            //debugger;
            // Attach a click event handler to <a> tags with the class 'ajax-link'
            $('a.ajax-link').click(function (event) {

                event.preventDefault();  // Prevent the default action (navigation)

                var url = $(this).attr('href');  // Get the URL from the href attribute

                // Send an AJAX request
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function (data) {
                        // debugger;
                        // Replace the content of the mainContainer div
                        $('#mainContainer').html(data);
                        console.log("AdminLTE Layout Success")
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error('AJAX error: ' + textStatus + ', ' + errorThrown);
                        console.log("AdminLTE Layout Error !!!")
                    }
                });
            });
        });
    </script>

