@using LibraBll.DTOs
@model LibraBll.DTOs.User.LoginUserDTO


<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
	<meta charset="utf-8">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

	<link rel="stylesheet" href="~/Content/loginStyle.css">
	<style>
		.center {
			background-color: rgba(255, 255, 255, 0.25);
		}

		.form-control {
			background-color: rgba(255, 255, 255, 0.5);
		}

		.input-group-text {
			background-color: rgb(0, 0, 0, 0.2);
		}

		.error-message {
			font-size: 20px; /* Set the font size to 18 pixels */
			font-family: 'Arial', sans-serif; /* Set the font family to Arial, with a fallback to sans-serif */
			color: red; /* Optional: set the text color to red for visibility */
		}
	</style>
</head>
    <body>
        <div class="center">
            <form method="post">
				<div class="card-body p-1 text-center">

					<h4 class="mb-4 mt-4">Welcome To Libra</h4>
					<hr class="my-4">

					<div class="input-group mb-3">
						<div class="input-group-text"><i class="fas fa-user"></i></div>
						@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", style = "font-size: 1.1rem", required = "required", placeholder = "User Name" })
					</div>

					<div class="input-group mb-3">
						<div class="input-group-text"><i class="fas fa-key"></i></div>
						@Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", style = "font-size: 1.1rem", required = "required" })
					</div>

					<hr class="my-4">
					<input type="submit" value="Login">
					@if (ViewBag.ShowErrorMessage != null && ViewBag.ShowErrorMessage)
					{
						<p class="error-message">
							<i class="fa-solid fa-triangle-exclamation"></i> Incorrect user name or password !
						</p>
					}
				</div>
            </form>
        </div>
    </body>
</html>